{
  "name": "crea-public",
  "version": "0.1.20",
  "description": "The public CREA Orkest website",
  "type": "module",
  "scripts": {
    "dev": "next dev --turbo",
    "build": "next build",
    "start": "next start",
    "lint": "npm run lint:js && npm run lint:styles",
    "lint:js": "eslint . --fix",
    "lint:styles": "prettier . --write",
    "analyze": "ANALYZE=true npm run build && webpack-bundle-analyzer .next/stats.json",
    "prepare": "husky install",
    "download-schema": "rover graph fetch crea-orkest-p7nmyh@main > ./src/graphql/generated/schema.graphql && npm run lint:styles",
    "codegen": "graphql-codegen --require dotenv/config --config ./src/graphql/codegen.ts",
    "codegen:watch": "graphql-codegen --require dotenv/config --config ./src/graphql/codegen.ts --watch",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/crea-orkest/crea-public.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/crea-orkest/crea-public/issues"
  },
  "homepage": "https://github.com/crea-orkest/crea-public#readme",
  "dependencies": {
    "@react-google-maps/api": "2.19.2",
    "@urql/core": "4.1.4",
    "classnames": "2.3.2",
    "datocms-structured-text-utils": "2.0.4",
    "graphql": "16.8.1",
    "next": "14.0.1",
    "react": "18.2.0",
    "react-datocms": "4.1.3",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@apollo/rover": "0.21.0",
    "@commitlint/cli": "18.2.0",
    "@commitlint/config-conventional": "18.1.0",
    "@graphql-codegen/cli": "5.0.0",
    "@graphql-codegen/client-preset": "4.1.0",
    "@graphql-codegen/typescript": "4.0.1",
    "@graphql-codegen/typescript-operations": "4.0.1",
    "@testing-library/jest-dom": "6.1.4",
    "@testing-library/react": "14.0.0",
    "@types/jest": "29.5.8",
    "@types/node": "18.18.8",
    "@types/react": "18.2.36",
    "@types/react-dom": "18.2.14",
    "@typescript-eslint/eslint-plugin": "6.10.0",
    "@typescript-eslint/parser": "6.10.0",
    "dotenv": "16.3.1",
    "eslint": "8.53.0",
    "eslint-config-next": "14.0.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-testing-library": "6.1.0",
    "husky": "8.0.3",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "pretty-quick": "3.1.3",
    "sass": "1.69.5",
    "ts-node": "10.9.1",
    "turbo": "1.10.16",
    "typescript": "5.2.2",
    "webpack-bundle-analyzer": "4.9.1"
  },
  "module": "esnext",
  "target": "es2022"
}
