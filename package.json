{
  "name": "crea-public",
  "version": "0.0.1",
  "description": "The public Crea Orkest website",
  "type": "module",
  "scripts": {
    "dev": "next dev --turbo",
    "build": "next build",
    "start": "next start",
    "lint": "npm run lint:js && npm run lint:styles",
    "lint:js": "eslint . --fix",
    "lint:styles": "prettier . --write",
    "analyze": "ANALYZE=true npm run build && webpack-bundle-analyzer .next/stats.json",
    "prepare": "husky install",
    "download-schema": "rover graph fetch crea-orkest-p7nmyh@main > ./src/graphql/generated/schema.graphql && npm run lint:styles",
    "codegen": "graphql-codegen --require dotenv/config --config ./src/graphql/codegen.ts",
    "codegen:watch": "graphql-codegen --require dotenv/config --config ./src/graphql/codegen.ts --watch",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/crea-orkest/crea-public.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/crea-orkest/crea-public/issues"
  },
  "homepage": "https://github.com/crea-orkest/crea-public#readme",
  "dependencies": {
    "@urql/core": "4.1.2",
    "classnames": "2.3.2",
    "graphql": "16.8.0",
    "next": "13.4.19",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@apollo/rover": "0.18.1",
    "@graphql-codegen/cli": "5.0.0",
    "@graphql-codegen/client-preset": "4.1.0",
    "@graphql-codegen/typescript": "4.0.1",
    "@graphql-codegen/typescript-operations": "4.0.1",
    "@testing-library/react": "14.0.0",
    "@types/jest": "29.5.4",
    "@types/node": "18.17.17",
    "@types/react": "18.2.21",
    "@types/react-dom": "18.2.7",
    "@typescript-eslint/eslint-plugin": "6.5.0",
    "@typescript-eslint/parser": "6.5.0",
    "dotenv": "16.3.1",
    "eslint": "8.49.0",
    "eslint-config-next": "13.4.19",
    "husky": "8.0.3",
    "jest": "29.6.4",
    "jest-environment-jsdom": "29.6.4",
    "pretty-quick": "3.1.3",
    "sass": "1.67.0",
    "ts-node": "10.9.1",
    "turbo": "1.10.13",
    "typescript": "5.2.2",
    "webpack-bundle-analyzer": "4.9.1"
  },
  "module": "esnext",
  "target": "es2022"
}
